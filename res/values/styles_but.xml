<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="rounded_button" parent="@android:style/Widget.Button"> 
        <item name="android:layout_margin">3dp</item> 
        <item name="android:gravity">center_vertical|center_horizontal</item>        
        <item name="android:onClick">buttonClick</item>
        <item name="android:textColor">@color/number_color</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/selector_round</item>        
    </style>
    
    
     
    <style  name="rounded_button_land" parent="@android:style/Widget.Button">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">50dp</item> 
        <item name="android:layout_margin">2dp</item> 
        <item name="android:gravity">center_vertical|center_horizontal</item>        
        <item name="android:onClick">buttonClick</item>
        <item name="android:textColor">@color/number_color</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/selector_round_land</item>               
    </style>
    
</resources>

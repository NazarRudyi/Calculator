<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="classic_Edittext" parent="@android:style/Widget.EditText">
        <item name="android:layout_gravity">center|top</item>
        <item name="android:layout_margin">3dp</item>        
        <item name="android:enabled">true</item>
        <item name="android:focusable">false</item>        
        <item name="android:shadowRadius">5</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
    </style>
    
    <style name="classic_Edittext.rounded">
        <item name="android:background">@drawable/text_view</item>
    </style>

    <style name="classic_Edittext.rounded_land">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/text_view_small</item>        
    </style>

</resources>